@model IEnumerable<GOLF.EVENT.Models.EventModel>

@{
    ViewData["Title"] = "Golf Events";
}

<h1>Golf Events</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No events are currently available.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Event ID</th>
                <th>Event Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventItem in Model)
            {
                <tr>
                    <td>@eventItem.Id</td>
                    <td>@eventItem.EventName</td>
                    <td>@eventItem.StartDate?.ToString("yyyy-MM-dd")</td>
                    <td>@eventItem.EndDate?.ToString("yyyy-MM-dd")</td>
                    <td><button>Track Players</button></td>
                </tr>
            }
        </tbody>
    </table>
}
 